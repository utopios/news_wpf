<Window x:Class="WpfDIExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding ApplicationTitle}" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Convertisseur Boolean vers Visibility -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu supérieur -->
        <Border Grid.Row="0" 
                Background="#2196F3" 
                Padding="15,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding ApplicationTitle}" 
                         FontSize="20" 
                         FontWeight="Bold" 
                         Foreground="White" 
                         VerticalAlignment="Center"/>
                
                <Button Content="Liste des utilisateurs" 
                      Command="{Binding NavigateToUserListCommand}" 
                      Margin="20,0,0,0" 
                      Padding="10,5" 
                      Background="White" 
                      BorderThickness="0"/>
            </StackPanel>
        </Border>

        <!-- Contenu principal (zone de navigation) -->
        <Border Grid.Row="1" 
                Background="White" 
                Padding="10">
            <ContentControl Content="{Binding CurrentView}"/>
        </Border>

        <!-- Pied de page -->
        <Border Grid.Row="2" 
                Background="#F5F5F5" 
                BorderBrush="LightGray" 
                BorderThickness="0,1,0,0" 
                Padding="15,10">
            <TextBlock Text="Application WPF avec Injection de Dépendances - .NET 8" 
                     FontSize="12" 
                     Foreground="Gray"/>
        </Border>
    </Grid>
</Window>
